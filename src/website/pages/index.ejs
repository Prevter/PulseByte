<html data-bs-theme="dark">

<head>
    <title>
        <%= client.client.user.username %>
    </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="/avatar.png">
    <script src="https://kit.fontawesome.com/863a3327e4.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-md px-2">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <%= client.client.user.username %>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText"
                    aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarText">
                    <ul class="navbar-nav me-auto mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="#stats">Stats</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#features">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#docs">Docs</a>
                        </li>
                    </ul>
                    <div class="navbar-text">
                        <div class="inline-md">
                            <% if (config.bot.about.repo) { %>
                                <a href="<%= config.bot.about.repo %>" class="social-icon"><i
                                        class="fa fa-github fa-lg"></i></a>
                            <% } if (config.bot.about.support) { %>
                                <a href="<%= config.bot.about.support %>" class="social-icon"><i
                                        class="fa-brands fa-discord fa-lg"></i></a>
                            <% } %>
                        </div>
                        <a href="/dashboard" class="text-decoration-none">
                            <button class="btn btn-primary m-0" type="button">Dashboard</button>
                        </a>
                    </div>
                </div>
        </nav>
    </header>
    <main>
        <div class="pt-5 px-5" id="home">
            <div class="container">
                <div class="row">
                    <div class="col-md-5 order-md-last justify-content-center">
                        <svg viewBox="0 0 270 237" width="270" height="237" class="mb-4 m-auto d-block">
                            <rect
                                style="stroke: rgb(0, 0, 0); paint-order: fill; stroke-opacity: 0; stroke-linejoin: round; fill: rgb(228, 194, 128);"
                                x="90" y="0" width="180" height="180" rx="32" ry="32"></rect>
                            <rect
                                style="stroke: rgb(0, 0, 0); paint-order: fill; stroke-opacity: 0; stroke-linejoin: round; fill: rgb(192, 107, 27);"
                                x="0" y="57" width="180" height="180" rx="32" ry="32"></rect>
                            <ellipse
                                style="stroke: rgb(0, 0, 0); stroke-opacity: 0; paint-order: fill; fill: rgb(109, 30, 20);"
                                cx="210" cy="177" rx="60" ry="60"></ellipse>
                        </svg>
                    </div>
                    <div class="col-md-7">
                        <h1 class="mb-3 fw-semibold lh-1">
                            One Bot - Many features
                        </h1>
                        <p class="lead mb-4">
                            An open-source Discord bot with great set of features including music, levels, moderation,
                            economy and more!
                        </p>
                        <p class="lead mb-4">
                            Enhance your Discord server by adding only one bot.
                        </p>
                        <p>
                            <a href="/invite" class="text-decoration-none">
                                <button class="btn btn-primary m-0 me-2 mb-1" type="button">Add To Server</button>
                            </a>
                            <% if (config.bot.about.repo) { %>
                                <a href="<%= config.bot.about.repo %>" class="text-decoration-none">
                                    <button class="btn btn-outline-primary m-0 mb-1" type="button">Source Code</button>
                                </a>
                            <% } %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="pb-5" id="stats">
            <div class="circle-separator">
                <div></div>
                <div></div>
                <div></div>
            </div>
            <div class="container-xxl">
                <div class="col-md-8 mx-auto text-center">
                    <h3 class="mt-4 mb-5 fw-semibold lh-1">
                        Bot Statistics
                    </h3>
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <div class="stat_block mx-1">
                                <span class="stat_value">
                                    <%= stats.commands_executed + stats.slash_commands %>
                                </span><br />
                                <span class="stat_name"><i class="fa-solid fa-terminal me-1"></i> Commands</span>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="stat_block mx-1">
                                <span class="stat_value">
                                    <%= stats.servers %>
                                </span><br />
                                <span class="stat_name"><i class="fa-solid fa-server me-1"></i> Servers</span>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="stat_block mx-1">
                                <span class="stat_value">
                                    <%= stats.users %>
                                </span><br />
                                <span class="stat_name"><i class="fa-solid fa-user me-1"></i> Users</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="py-5" id="features">
            <div class="container-xxl">
                <div class="col-md-8 mx-auto">
                    <h3 class="mb-5 fw-semibold lh-1 text-center">
                        Features
                    </h3>
                    <div class="container-xxl">
                        <div class="row my-4 align-items-center">
                            <div class="col-md-6 text-center px-1 mb-3">
                                <img src="https://images.placeholders.dev/?width=350&height=200" class="img-fluid">
                            </div>
                            <div class="col-md-6">
                                <div class="feature_block text-left-md">
                                    <h4 class="feature_name">Music</h4>
                                    <p class="feature_description">
                                        Play any music you like in a voice channel from almost any streaming platform
                                        like YouTube, SoundCloud, Spotify and more!
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="row my-4 align-items-center">
                            <div class="col-md-6 order-md-last text-center px-1 mb-3">
                                <img src="https://images.placeholders.dev/?width=350&height=200" class="img-fluid">
                            </div>
                            <div class="col-md-6">
                                <div class="feature_block text-right-md">
                                    <h4 class="feature_name">Moderation</h4>
                                    <p class="feature_description">
                                        Keep your chat clean and secure by using moderation commands and automod module
                                        to punish those who break the rules.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="row my-4 align-items-center">
                            <div class="col-md-6 text-center px-1 mb-3">
                                <img src="https://images.placeholders.dev/?width=350&height=200" class="img-fluid">
                            </div>
                            <div class="col-md-6">
                                <div class="feature_block text-left-md">
                                    <h4 class="feature_name">Levels</h4>
                                    <p class="feature_description">
                                        Rate the members of your server by their activity using the XP system, where
                                        each user advances their level by sending messages.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="row my-4 align-items-center">
                            <div class="col-md-6 order-md-last text-center px-1 mb-3">
                                <img src="https://images.placeholders.dev/?width=350&height=200" class="img-fluid">
                            </div>
                            <div class="col-md-6">
                                <div class="feature_block text-right-md">
                                    <h4 class="feature_name">Economy & Fun</h4>
                                    <p class="feature_description">
                                        Enjoy many minigames to have fun with your friends. Collect virtual money to
                                        spend them in casino or even open some cases.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="py-5" id="docs">
            <div class="container-xxl">
                <div class="col-md-8 mx-auto text-center">
                    <h3 class="mb-3 fw-semibold lh-1">
                        Visit documentation to learn how to use the bot
                    </h3>
                    <p class="lead">
                        Get information about every command and module
                        to maximize your usage
                    </p>
                    <a href="/docs" class="text-decoration-none">
                        <button class="btn btn-primary m-0" type="button">Open Docs</button>
                    </a>
                </div>
            </div>
        </div>
    </main>
    <footer class="py-3">
        <ul class="nav justify-content-center my-2">
            <% if (config.bot.about.repo) { %>
                <li class="nav-item">
                    <a href="<%= config.bot.about.repo %>" class="social-icon">
                        <i class="fa fa-github fa-lg"></i>
                    </a>
                </li>
            <% } if (config.bot.about.support) { %>
                <li class="nav-item">
                    <a href="<%= config.bot.about.support %>" class="social-icon">
                        <i class="fa-brands fa-discord fa-lg"></i>
                    </a>
                </li>
            <% } %>
        </ul>
        <p class="text-center text-muted">
            © <%= new Date().getFullYear() %> 
            Copyright 
            <b><%= client.client.user.username %></b>. 
            All Rights Reserved.
        </p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
</body>

</html>